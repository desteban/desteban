---
interface Props {
  alt: string;
  src: string;
  Titulo: string;
}

const { Titulo, alt, src } = Astro.props;
---

<article
  class="w-full p-3 flex flex-col group overflow-hidden md:p-1 bg-[hsl(var(--background))] rounded-lg md:p-5 md:space-x-2 md:flex-row"
>
  <figure
    class="mb-3 md:mb-0 md:w-1/2 overflow-hidden group rounded-lg md:min-h-36"
  >
    <img
      src={src}
      alt={alt}
      class="w-full h-full object-cover transition ease-out duration-500 md:group-hover:scale-110"
    />
  </figure>

  <div class="w-full h-full md:w-1/2 md:max-w-lg py-2 px-1">
    <h3 class="m-0 text-2xl font-bold mb-2">
      {Titulo}
    </h3>

    <div class="">
      <slot />
    </div>
  </div>
</article>
