---
import Icono from "@iconos/EnlaceIcono.astro";
import BotonEnlace from "@components/UI/Enlaces/BotonEnlace.astro";

interface Props {
  classname?: string;
  href: string;
  texto: string;
  title?: string;
  targetBlank?: boolean;
}

const {
  href,
  texto,
  classname: estilos,
  title,
  targetBlank: targetBlanck = false,
} = Astro.props;
---

<BotonEnlace
  href={href}
  title={title}
  targetBlank={targetBlanck}
  classname={estilos}
>
  <Icono size={24} />
  {texto}
</BotonEnlace>
