---
import Layout from "@layouts/Layout.astro";
import NotFound from "@img/page_not_found.svg";
---

<Layout title="Not Found">
  <div class="container flex flex-col items-center justify-center h-svh">
    <figure class="md:max-w-sm mb-6">
      <img src={NotFound.src} alt="Imagen de pagina no encontrada." />
    </figure>
    <p class="text-2xl font-semibold text-white text-center">
      No encontramos esta pagina.
    </p>
    <p class="text-center">
      Parece que esta pagina no existe, pero siempre puedes regresar al inicio
    </p>

    <a
      href="/"
      title="Regresar al inicio"
      class="px-4 py-2 rounded-lg bg-primary text-primary-foreground text-lg no-underline"
      >Regresar al Inicio</a
    >
  </div>
</Layout>
