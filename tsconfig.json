{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@iconos/*": ["./public/Icons/*"],
      "@img/*": ["./public/img/*"],
      "@iconosFrame/*": ["./public/frameworks/*"],
      "@globals/*": ["./src/Globals/*"],
      "@constants/*": ["./src/constants/*"],
      "@assets/*": ["./src/assets/*"],
      "@config/*": ["./src/config/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsxImportSource": "preact"
  }
}
